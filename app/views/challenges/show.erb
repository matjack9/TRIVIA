<center>
<h1><%= @user.username %> vs <%= @rival.username %></h1>
<br>

<h3><%= link_to 'ðŸŒŸ Start a new Challenge ðŸŒŸ', new_user_quiz_path(challenge_id: @challenge.id) %></h3>


<h3> Your Rivalry History</h3>
  <% @quizzes.each do |quiz| %>
    <% if quiz.challenge.rival.id == session[:user_id] %>
      <% if !quiz.rival_score %>
        <%= "You have an open quiz." %><br>
        <%= link_to "Proceed to quiz!", "/users/#{session[:user_id]}/quizzes/#{quiz.id}"%>
      <% else %>
        <h4> Category: <%= quiz.category_name %></h4>
        <p><%= @rival.username %> score: <%= quiz.rival_score %></p>
        <p><%= @user.username %> score: <%= quiz.user_score %></p>
      <% end %>
    <% else %>
      <% if !quiz.user_score %>
        <%= "You have an open quiz." %><br>
        <%= link_to "Proceed to quiz!", "/users/#{session[:user_id]}/quizzes/#{quiz.id}"%>
      <% else %>
        <h4> Category: <%= quiz.category_name %></h4>
        <p><%= @user.username %> score: <%= quiz.user_score %></p>
        <p><%= @rival.username %> score: <%= quiz.rival_score %></p>
      <% end %>
    <% end %>
  <% end %>
<br>



</center>
