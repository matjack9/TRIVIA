<!DOCTYPE html>
<html>
<head>
  <title>Trivia</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
  <script
    src="https://code.jquery.com/jquery-3.1.1.min.js"
    integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
    crossorigin="anonymous"></script>
  <script src="semantic/dist/semantic.min.js"></script>
</head>

  <div class="ui  orange inverted menu">
    <a href="/" class="item">
      <h1>Trivia</h1>
    </a>
        <div class="right menu">
      <% if logged_in? %>
        <div class="item"><%= link_to "Welcome #{current_user.username}", user_path(current_user) %></div>
      <% else %>
        <a class="item" href="<%= new_user_path %>">
          Sign Up
        </a>
      <% end %>

     <% if logged_in? %>
      <%= link_to 'Logout', logout_path, {class: 'item', method: 'DELETE'} %>
     <% else %>
      <a class="item" href="<%= login_path %>">
        Login
      </a>
     <% end %>

   </div>
  </div>
  <body>
    <div class="ui centered grid ">
      <div class="eight wide column">

        <%= yield %>

      </div>
    </div>
  </body>
</html>
